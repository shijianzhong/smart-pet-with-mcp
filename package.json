{
  "name": "smart-pet",
  "version": "1.0.0",
  "description": "An Electron application with Vue",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build && npm run copy-models && npm run copy-trayicon",
    "postinstall": "node scripts/postinstall.js",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac --arm64",
    "build:linux": "npm run build && electron-builder --linux",
    "copy-models": "cp -R resources/models out/renderer/",
    "copy-trayicon": "cp resources/trayicon.png build/",
    "mcp-server": "npx --no-install @modelcontextprotocol/server-filesystem .",
    "mcp-server:debug": "npx --no-install @modelcontextprotocol/server-filesystem . --debug"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@pixi/unsafe-eval": "^7.4.3",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.4.7",
    "electron-updater": "^6.3.9",
    "eventsource": "^2.0.2",
    "openai": "^4.90.0",
    "pixi-live2d-display": "0.4.0",
    "pixi.js": "6.5.10",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "24.8.0",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-vue": "^9.33.0",
    "less": "^4.2.2",
    "prettier": "^3.5.3",
    "vite": "^6.2.3",
    "vue": "^3.5.13"
  }
}
